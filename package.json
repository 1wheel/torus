{
  "name": "torus-dom",
  "version": "0.2.2",
  "description": "Minimal JS UI framework focused on being lightweight and free of dependencies",
  "repository": "git@github.com:thesephist/torus.git",
  "author": "Linus Lee <linus@thesephist.com>",
  "private": false,
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "license": "MIT",
  "scripts": {
    "test": "karma start karma.dev.conf.js",
    "test:prod": "karma start karma.min.conf.js",
    "test:size": "bundlesize",
    "build": "node build/build.js && cp dist/index.min.js samples/hn-reader/index.min.js && cp dist/index.min.js samples/graph-calc/index.min.js && cp dist/index.min.js samples/markus/index.min.js",
    "verify": "node build/build.js && karma start karma.min.conf.js && bundlesize",
    "clean": "rm -rvf dist/* coverage/*",
    "docs": "node doc/generate.js",
    "prepublishOnly": "node build/build.js",
    "deploy:hn": "surge -p samples/hn-reader/ --domain https://torushn.surge.sh",
    "deploy:graph": "surge -p samples/graph-calc/ --domain https://graphcalc.surge.sh",
    "deploy:markus": "surge -p samples/markus/ --domain https://markuswriter.surge.sh"
  },
  "files": [
    "src",
    "dist",
    "renderers",
    "types"
  ],
  "devDependencies": {
    "bundlesize": "^0.17.0",
    "chai": "^4.2.0",
    "istanbul": "^0.4.5",
    "karma": "^2.0.2",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "marked": "^0.5.2",
    "mkdirp": "^0.5.1",
    "mocha": "^5.1.1",
    "webpack": "^4.27.1"
  },
  "keywords": [
    "vdom",
    "virtual",
    "torus",
    "components",
    "router",
    "styled"
  ],
  "bundlesize": [
    {
      "path": "./dist/*.min.js",
      "threshold": "4.7kB"
    }
  ]
}
