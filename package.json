{
  "name": "torus-dom",
  "version": "0.1.0",
  "description": "Minimal JS UI framework focused on being lightweight and free of dependencies",
  "repository": "git@github.com:thesephist/torus.git",
  "author": "Linus Lee <linus@thesephist.com>",
  "private": false,
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "license": "MIT",
  "scripts": {
    "test": "karma start karma.dev.conf.js",
    "test:prod": "karma start karma.min.conf.js",
    "build": "node build/build.js",
    "verify": "node build/build.js && karma start karma.min.conf.js",
    "clean": "rm -rvf dist/* coverage/* docs/",
    "docs": "node doc/generate.js",
    "postinstall": "node build/build.js",
    "deploy:hn": "cp dist/index.min.js samples/hn-reader/ && surge -p samples/hn-reader/ --domain https://torushn.surge.sh"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "istanbul": "^0.4.5",
    "karma": "^2.0.2",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "marked": "^0.5.2",
    "mkdirp": "^0.5.1",
    "mocha": "^5.1.1",
    "webpack": "^4.27.1"
  }
}
